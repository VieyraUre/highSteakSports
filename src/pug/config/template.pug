block config
	include utilis/vars
doctype html
html(lang='en' prefix='og: http://ogp.me/ns#', class='no-js')
	head
		include utilis/metatags
		include utilis/metaTagsPWA
		script(src="https://kit.fontawesome.com/20f3c29ee8.js" crossorigin="anonymous")
		link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.9.4/tiny-slider.css')
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
		link(rel="stylesheet" href="assets/css/styles.css")
		title= currentPage.slice(0,1).toUpperCase() + currentPage.slice(1) + " | " + siteName
	body(class=currentPage, itemscope itemtype="http://schema.org/WebPage")
		//-here start the Main Header
		header(class='main-header')
			include ../components/top-nav
			block main-header
		//-here ends the Main Header
		//-here start the Main Container
		main(class='main-container')
			block main-container
		//-here ends the Main Container
		//-here start the Main Footer
		footer(class='main-footer')
			include ../components/footer
			block main-footer
		//-here ends the Main Footer
		script(src='https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.9.2/min/tiny-slider.js')
		script(src="assets/js/scripts-min.js")
		block scripts
